{{ form_start(form) }}
<form action="" method="post" enctype="multipart/form-data" class="uk-form-stacked">
    {# upload Image#}
    {% if service.image is empty %}
    {% else %}
        <img data-src="/uploads/services_images/{{ service.image }}" uk-img>
    {% endif %}
    <div class="uk-margin">
        <div class="js-upload" uk-form-custom>
            {{form_row(form.imageFile)}}
            <button class="uk-button uk-button-default" type="button" tabindex="-1">SÃ©lectionner une image</button>
        </div>
    </div>
    <div class="uk-margin">
        <label class="uk-form-label">Description de l'image</label>
        <div class="uk-form-controls">
            {{form_widget(form.captionImage)}}
        </div>
    </div>
    <div class="uk-margin">
        <label class="uk-form-label">Titre</label>
        <div class="uk-form-controls">
            {{form_widget(form.title)}}
        </div>
    </div>
    <div class="uk-margin">
        <label class="uk-form-label">Description</label>
        <div class="uk-form-controls">
            {{form_widget(form.description)}}
        </div>
    </div>
    <div class="uk-margin">
        <label class="uk-form-label">Contenu</label>
        <div class="uk-form-controls">
            {{form_widget(form.content)}}
        </div>
    </div>
    {{ form_widget(form) }}
    <button class="uk-button uk-button-primary uk-border-rounded">{{ button_label|default('Valider') }}</button>
</form>

{{ form_end(form) }}