<div class="uk-container">
    <h2 class="uk-text-center">Nos derniers articles</h2>
    {% if articles is empty %}
    <p>Aucun article n'a été trouvé</p>
    {% else %}

    <div class="uk-child-width-1-3@m uk-child-width-1-2@s uk-margin uk-text-center"
        uk-scrollspy="target: > div; cls: uk-animation-fade; delay: 200" uk-grid>
        {% for article in articles %}
        <div>
            <a href="{{ path('blog_show',{'id': article.id})}}" class=" uk-link-toggle">
                <img class="uk-border-rounded" src="/uploads/articles_images/{{ article.image }}"
                    alt="{{ article.captionImage }}">
                <h3 class="uk-link-heading">{{ article.title }}</h3>
            </a>
        </div>
        {% endfor %}

    </div>


    <div class="uk-flex uk-flex-middle">
        <a type="button" href="{{ path('blog_index')}}"
            class="uk-button uk-button-large uk-text-middle uk-button-front uk-button-primary  uk-align-center uk-margin uk-border-rounded">Accéder
            au
            blog</a>
    </div>
    {% endif %}
</div>