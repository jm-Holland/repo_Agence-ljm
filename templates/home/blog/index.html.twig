{% extends 'base-alternative.html.twig' %}

{% block title %}Blog_liste{% endblock %}

{% block body %}
<section class="uk-section">
    <div class="uk-container">
        <h1>Le blog</h1>
        <div class="uk-child-width-1-2@s uk-child-width-1-3@m uk-text-center"  uk-grid>
            {% for article in articles %}
                <div>
                    <a href="{{ path('blog_show',{'id': article.id})}}" class=" uk-link-toggle">
                        <img class="uk-border-rounded" src="/uploads/articles_images/{{ article.image }}" alt="{{ article.captionImage }}">
                        <h3 class="uk-link-heading">{{ article.title }}</h3>
                        <p class="uk-text-meta uk-margin-remove">{{article.createdAt|date('d/m/Y Ã  H:i')}}</p>
                        <p class="uk-text-meta uk-margin-remove">{{article.author.username}} </p>
                        <p>{{article.content|slice(0,150)|raw}}...</p>
                    </a>
                </div>
            {% else %}
            No records Found
            {% endfor %}
        </div>
        <div class="navigation">
            {{ knp_pagination_render(articles) }}
        </div>
    </div>
</section>
{% endblock %}